{
  "name": "vik-ramanujam-resume",
  "version": "0.0.9",
  "description": "Vik Ramanujam's Resume",
  "scripts": {
    "build": "npm-run-all --parallel build:markdown build:assets",
    "build:assets": "node-sass --importer=node_modules/node-sass-tilde-importer -w assets/styles.scss -o build --source-map=true --output-style=compressed ",
    "build:markdown": "nodemon --watch resume-template.html --watch README.md --exec 'markdown README.md -f gfm --template resume-template.html > build/index.html'",
    "build:watch": "npm-run-all --parallel build serve:watch",
    "preview": "babel-node preview.js",
    "serve": "live-server --no-browser --ignore=css/sass,css/styles.css.map --wait=300 ./build",
    "serve:watch": "nodemon --watch package.json npm run serve:watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/piggyslasher/resume.git"
  },
  "keywords": [
    "resume",
    "developer",
    "json",
    "resume",
    "no",
    "javascript",
    "react"
  ],
  "author": "Vik Ramanujam",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/piggyslasher/resume/issues"
  },
  "homepage": "https://github.com/piggyslasher/resume#readme",
  "dependencies": {
    "babel-cli": "^6.26.0",
    "live-server": "^1.2.0",
    "markdown-to-html": "cwjohan/markdown-to-html",
    "marked": "^0.3.19",
    "marked-terminal": "^2.0.0",
    "node-sass": "^4.9.0",
    "nodemon": "^1.17.4",
    "vertical-rhythm-reset": "^1.1.0"
  },
  "devDependencies": {
    "node-sass-tilde-importer": "^1.0.2",
    "npm-run-all": "^4.1.3"
  }
}
